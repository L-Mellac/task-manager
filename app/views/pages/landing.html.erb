<div class="navbar" data-controller="hotdog-navigation-login" data-action="click->hotdog-navigation-login#toggleMenu">
  <div id="hotdog-menu" data-hotdog-navigation-target="threeBars">
      <div class="pulse">
        <div class="bar-top"></div>
        <div class="bar-long"></div>
        <div class="bar-bottom"></div>
      </div>
    </div>

  <a class="option-1 hidden"
     data-hotdog-navigation-login-target="loginLink"
     data-action="click->hotdog-navigation-login#toggleLogin"
     <%= "data-action=\"click->hotdog-navigation-login#toggleSignup\"" unless user_signed_in? %>
     href="/days/22">today</a>

  <a class="option-2 hidden"
     data-hotdog-navigation-login-target="signupLink"
     >signup</a>

  <form action="/user/sign_in" method="post" class="login-form hidden" data-hotdog-navigation-login-target="loginForm">
    <h1>log in</h1>
    <input type="text" placeholder="Username (required)" name="user[email]">
    <input type="password" placeholder="Password (required)" name="user[password]">
    <input type="hidden" name="authenticity_token", value="<%= form_authenticity_token %>">
    <input type="submit" value="enter">
  </form>

  <form action="" method="get" class="signup-form hidden" data-hotdog-navigation-login-target="signupForm">
    <h1>sign up</h1>
    <input type="text" placeholder="Email (required)">
    <input type="password" placeholder="Password (required)">
    <input type="submit" value="enter">
  </form>
 </div>

